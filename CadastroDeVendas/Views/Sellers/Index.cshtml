@model IEnumerable<CadastroDeVendas.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2>Sellers</h2>

<p>
   <a asp-action="Create" class="btn btn-default" >Create New</a>  <!--Criação do link para cadastrar novos vendedores 1-Passo depois fui na controoler-->
</p>

<table class ="table table-striped table-hover">
    <thead>  <!--Cabeçalho-->
        <tr class ="success">
            <th >
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody >
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                     <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                     <td>
                    @Html.DisplayFor(modelItem => item.BirthData)
                </td>
                     <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">|Edit</a>
                    <a asp-action="Detalhes" asp-route-id="@item.Id">|Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">|Deete</a>
                </td>
            </tr>
        }
    </tbody>
</table>